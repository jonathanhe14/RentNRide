@model Entities_POJO.UserProfile

@{
    ViewBag.Title = "InicioSesion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("InicioSesion", "Home", FormMethod.Post))
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <form class="form-signin">
                    <img class="mb-4" src="../assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
                    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @if (@ViewBag.Message != null)
                    {
                        <div style="border: 1px solid red">
                            @ViewBag.Message
                        </div>}

                    <!--<label for="inputEmail" class="sr-only">Email address</label>
                    <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>-->
                    <!--<label for="inputPassword" class="sr-only">Password</label>
                    <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>-->
                    <div class="form-group">
                        @Html.LabelFor(a => a.UserName)
                        @Html.TextBoxFor(a => a.UserName)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(a => a.Password)
                        @Html.TextBoxFor(a => a.Password)
                    </div>

                    <div class="checkbox mb-3">
                        <label>
                            @Html.ActionLink("¿Olvidó su contraseña?", "EnvioOTP", "Home")
                        </label>
                    </div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Iniciar</button>
                </form>
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </div>

}

