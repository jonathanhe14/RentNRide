@model Entities_POJO.Usuarios

@{
    ViewBag.Title = "RestablecerClave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("RestablecerClave", "Home", FormMethod.Post))
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <form class="form-signin">
                    <h1 class="h3 mb-3 font-weight-normal">Cambiar contraseña</h1>
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @if (@ViewBag.Message != null)
                    {
                        <div style="border: 1px solid red">
                            @ViewBag.Message
                        </div>}
                    <div class="form-group">
                        @Html.Label("Cuenta")
                        @Html.TextBox("correo", @TempData["usuario"], new { @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Nueva contraseña")
                        @Html.TextBox("nuevaClave")
                    </div>
                    <div class="form-group">
                        @Html.Label("Confirmar contraseña")
                        @Html.TextBox("confirmarClave")
                    </div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Cambiar</button>
                </form>
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </div>



}

