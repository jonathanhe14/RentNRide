@using WebApp.Models.Helpers
@model Entities_POJO.Usuarios

@{
    ViewBag.Title = "EnvioOTP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (@ViewBag.Message != null)
{
<div class="alert-danger">
    @ViewBag.Message
</div>}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("EnvioOTPCorreo", "Home", FormMethod.Post))
            {
                <div class="container">
                    <div class="row">
                        <div class="col-md-4">
                        </div>
                        <div class="col-md-4">
                            <form class="form-signin">
                                <h1 class="h3 mb-3 font-weight-normal">Envío por Correo</h1>
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <div class="form-group">
                                    @Html.LabelFor(a => a.Correo)
                                    @Html.TextBoxFor(a => a.Correo)
                                </div>
                                <button class="btn btn-lg btn-primary" type="submit">Enviar</button>
                            </form>
                        </div>
                        <div class="col-md-4">
                        </div>
                    </div>
                </div>}
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("EnvioOTPTelefono", "Home", FormMethod.Post))
            {
                <div class="container">
                    <div class="row">
                        <div class="col-md-4">
                        </div>
                        <div class="col-md-4">
                            <form class="form-signin">
                                <h1 class="h3 mb-3 font-weight-normal">Envío por SMS</h1>
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <div class="form-group">
                                    @Html.LabelFor(a => a.Telefono)
                                    @Html.TextBoxFor(a => a.Telefono)
                                </div>
                                <button class="btn btn-lg btn-primary" type="submit">Enviar</button>
                            </form>
                        </div>
                        <div class="col-md-4">
                        </div>
                    </div>
                </div>}
        </div>
    </div>
</div>




