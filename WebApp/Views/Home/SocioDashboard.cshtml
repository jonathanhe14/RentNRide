@using WebApp.Models.Helpers;
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA4aNZIQyvam7h8Zmdq8ldZ_7sdtVGcwtE"></script>
<script src="~/Scripts/Views/SocioDashboard.js"></script>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>



<body>

    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <div class="jumbotron">
                        <h2>
                            Vehiculos
                        </h2>
                        <p>
                            Cantidad vehiculos: <label id="vehiculoCant"></label>
                        </p>
                        <p>
                            @Html.ActionLink("Editar vehiculos", "SocioVehiculos", "Home", new { @class = "btn btn-primary btn-lg" })
                        </p>
                        <p>
                            @Html.ActionLink("Ubicar vehiculos", "BusquedaVehiculos", "Home", new { @class = "btn btn-primary btn-lg" })
                        </p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="jumbotron fin">
                        <h2>
                            Ganancias/Pérdidas
                        </h2>
                        <p>
                            Ingresos: $<label id="lblIngresos"></label>
                        </p>
                        <p>
                            Egresos: $<label id="lblEgresos"></label>
                        </p>
                        <p>
                            <label id="lblGanancias"></label>: $<label id="lblGananciasMonto"></label>
                        </p>
                        <p>
                            @Html.ActionLink("Ver reporte completo", "Finanzas", "Home", new { @class = "btn btn-primary btn-lg" })
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<style>
    #map {
        height: 400px;
        width: 800px;
    }
    #alert_container {
        position: fixed;
        left: 40%;
        top: 50%;
    }
</style>

