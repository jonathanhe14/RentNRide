@model Entities_POJO.Vehiculo


@{
    ViewBag.Title = "PaginaVehiculo";
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
}

<script src="~/Scripts/Views/MostrarPuntoMapaVehiculos.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA4aNZIQyvam7h8Zmdq8ldZ_7sdtVGcwtE&callback=initMap" defer></script>

<h2>Vehículo: @ViewBag.vehiculo</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            @foreach (var item in ViewData["listaImagenes"] as string[])
            {
                <img src="@item" alt="Alternate Text" height="500" width="500" />
            }

        </div>
        <div class="col-md-6">
            <h3>Información del vehículo</h3>
            <ul>
                <li><span>Tipo: </span> @Model.Tipo</li>
                <li><span>Modelo: </span> @Model.Modelo</li>
                <li><span>Marca: </span> @Model.Marca</li>
                <li><span>Combustible: </span> @Model.Combustible</li>
                <li><span>Kilometraje: </span> @Model.Kilometraje</li>
            </ul>
            <h3>Cargos</h3>
            <ul>
                <li><span>¿Aceptación inmediata?: </span> @Model.AccptInmediata</li>
                <li><span>Tarifa: </span> @Model.Tarifa</li>
                <li><span>Cargo adicional lugar diferente: </span> @Model.cLugarDiferente</li>
                <li><span>Cargo adicional km excedido: </span> @Model.cKmExcedido</li>
                <li><span>Cargo adicional por entregar vehículo en mal estado: </span> @Model.cMalEstado</li>
            </ul>
            <h3>Punto de entrega</h3>
            <div id="map" style="height:500px; width:auto;border: 1px solid black;margin-top:30px"></div>
        </div>
    </div>
</div>

<div class="form-group">
    @Html.TextBox("latitud", Model.Latitud, new { @readonly = "readonly", @class = "invisible latitud" })
    @Html.TextBox("longitud", Model.Longitud, new { @readonly = "readonly", @class = "invisible longitud" })
</div>

