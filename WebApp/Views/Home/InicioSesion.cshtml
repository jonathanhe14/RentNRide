@model Entities_POJO.UserProfile

@{
    ViewBag.Title = "InicioSesion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/Views/IniciarSesion.js"></script>
@using (Html.BeginForm("InicioSesion", "Home", FormMethod.Post))
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <form class="form-signin">
                    <img class="mb-4" src="../../img/logo.png" alt="" width="72" height="72">
                    <h1 class="h3 mb-3 font-weight-normal">Inicio de sesión</h1>
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @if (@ViewBag.Message != null)
                    {
                        <div class="alert-danger">
                            @ViewBag.Message
                        </div>}

                    <div class="form-group" id="divCorreo">
                        @Html.Label("Correo")
                        @Html.TextBoxFor(a => a.UserName )

                    </div>
                    <div class="form-group">
                        @Html.Label("Contraseña")
                        @Html.PasswordFor(a => a.Password)

                    </div>

                    <div class="checkbox mb-3">
                        <label>
                            @Html.ActionLink("¿Olvidó su contraseña?", "EnvioOTP", "Home")
                        </label>
                    </div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit" id="IniciarSesion">Iniciar</button>
                    
                </form>
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </div>

    


}
