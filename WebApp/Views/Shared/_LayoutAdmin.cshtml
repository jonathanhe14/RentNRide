<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - RentNRide.com</title>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

    <script src="~/Content/Chart.min.js"></script>

    <script src="~/Scripts/Views/RegistroUsuariosFinales.js"></script>
    <script src="~/Scripts/Views/ControlActionsAdmin.js"></script>
    <link href="~/Content/admin.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("RentNRide.com", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!---<li>@Html.ActionLink("Home", "Index", "Home")</li>-->
                    <li>@Html.ActionLink("Panel de Control", "Administrador", "Home")</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" id="themes">Catálogos <span class="caret"></span></a>
                        <div class="dropdown-menu" aria-labelledby="Catalogos">
                            @Html.ActionLink("Marcas", "Marcas", "Home", new { @class = "dropdown-item" })
                            <div class="dropdown-divider"></div>
                            @Html.ActionLink("Modelos", "Modelos", "Home", new { @class = "dropdown-item" })
                            <div class="dropdown-divider"></div>

                            @Html.ActionLink("Tipos de Vehículo", "TiposVehiculo", "Home", new { @class = "dropdown-item" })
                            <div class="dropdown-divider"></div>
                            @Html.ActionLink("Tipos de Combustible", "TiposCombustible", "Home", new { @class = "dropdown-item" })
                        </div>
                    <li>@Html.ActionLink("Usuarios", "Usuarios", "Home")</li>
                    <li>@Html.ActionLink("Finanzas", "Finanzas", "Home")</li>
                    <li>@Html.ActionLink("Solicitudes", "Solicitudes", "Home")</li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <!--<footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application-hola</p>
        </footer>-->
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <img class="mb-2" src="../../img/logo.png" alt="" width="100" height="100">
                    <!--<small class="d-block mb-3 text-muted">&copy; 2017-2021</small>-->
                </div>
                <div class="col-md-4">
                    <h5>Registros</h5>
                    <ul class="list-unstyled text-small">
                        <li>@Html.ActionLink("Socios", "RegistroSocios", "Home")</li>
                        <li>@Html.ActionLink("Usuarios finales", "RegistroUsuariosFinales", "Home")</li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Buscar vehículos</h5>
                    <ul class="list-unstyled text-small">
                        <li>@Html.ActionLink("Inicio sesión", "InicioSesion", "Home")</li>
                    </ul>
                </div>
                <!--<div class="col-md-3">
                    <h5>About</h5>
                    <ul class="list-unstyled text-small">
                        <li><a class="text-muted" href="#">Team</a></li>
                        <li><a class="text-muted" href="#">Locations</a></li>
                        <li><a class="text-muted" href="#">Privacy</a></li>
                        <li><a class="text-muted" href="#">Terms</a></li>
                    </ul>-->
            </div>
        </div>
        </div>
    </footer>


</body>
</html>

<style>
    #alert_container {
        position: fixed;
        left: 40%;
        top: 50%;
    }
</style>
<script>
    $(document).ready(function () {
        $('.alert').hide();
    });
</script>
